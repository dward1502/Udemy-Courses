<h2 class="page-header">Account Login</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form action="/auth/login" method="post">
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" id="" class="form-control" placeholder="Username">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" name="password" id="" class="form-control" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<a href="/auth/twitter" class="btn btn-info">
    <span class="fa fa-twitter"></span> Twitter</a>
<a href="/auth/google" class="btn btn-danger">
    <span class="fa fa-google-plus"></span> Google</a>
<a href="/auth/facebook" class="btn btn-primary">
    <span class="fa fa-facebook"></span> Facebook</a>
    <a href="/auth/github" class="btn btn-primary">
        <span class="fa fa-github"></span> Github</a>
